<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/view_pager" />

    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tabs"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tvName"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/img_photo_detail"
            motion:layout_constraintStart_toStartOf="@+id/img_photo_detail"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/tvName"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/img_photo_detail"
            motion:layout_constraintStart_toStartOf="@+id/img_photo_detail"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/tvCompany"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvName"
            motion:layout_constraintStart_toStartOf="@+id/tvName" />
        <Constraint
            android:id="@+id/tvLocation"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvCompany"
            motion:layout_constraintStart_toStartOf="@+id/tvCompany" />
        <Constraint
            android:id="@+id/tvHtmlUrl"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvLocation"
            motion:layout_constraintStart_toStartOf="@+id/tvLocation" />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintStart_toEndOf="@+id/img_photo_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvfollowerDetail"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/tvfollowerDetail"
            motion:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="32dp" />
        <Constraint
            android:id="@+id/textView2"
            motion:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvfollowingDetail"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/tvfollowingDetail"
            motion:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.446"
            motion:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="32dp" />
        <Constraint
            android:id="@+id/textView3"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/tvrepositoryDetail"
            android:layout_marginStart="8dp"
            motion:layout_constraintHorizontal_bias="0.0" />
    </ConstraintSet>
</MotionScene>